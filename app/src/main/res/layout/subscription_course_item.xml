<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/green_dark"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/course_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="start|center_vertical"
            android:maxLines="3"
            android:minLines="1"
            android:singleLine="false"
            android:text="Course name"
            android:textColor="@color/sandish"
            android:textSize="24sp" />

        <Button
            android:id="@+id/subscription_button"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="100sp"
            android:layout_height="38dp"
            android:background="@drawable/accent_rounded_background"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@string/action_join"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
